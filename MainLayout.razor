@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Style="background-color:#fff200">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Dark" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <div class="TitleContainer">
            <div class="title-wrapper">
                <h1 style="color:black;">Accountrix</h1>
            </div>
            <div class="title-img-container">
                <img class="title-img-wrapper" src="../css/account_balance_wallet_24dp_000000_FILL0_wght400_GRAD0_opsz24.png">
            </div>
        </div>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MyNavMenu/>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}